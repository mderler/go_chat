package layout

script darkmode() {
    const darkMode = localStorage.getItem('darkMode');
    if (darkMode === 'enabled') {
        document.body.classList.add('dark');
    }
}

templ Base() {
	<html>
		<head>
			<meta charset="UTF-8"/>
			<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
			<title>Chat</title>
			<link href="/style.css" rel="stylesheet"/>
		</head>
		<body onload={ darkmode() }>
			{ children... }
		</body>
	</html>
}
